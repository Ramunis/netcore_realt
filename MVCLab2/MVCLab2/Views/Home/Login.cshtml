@{ ViewData["Title"] = "Login";

}
@model MVCLab2.Models.LoginModel
<style>
    .size {
        width: 25%;
        min-width: 250px;
    }
</style>
<img src="~/img/4.png" class="img-fluid" alt="Responsive image">
<h4> Вход в фирму Риелтора</h4>

<a class="nav-link" asp-controller="Home" asp-action="Register">    Регистрация</a>

<form asp-action="Login" asp-controller="Home" asp-anti-forgery="true">
    <div>
        <label asp-for="Username">Введите Login </label><br>
        <input class="form-control size" type="text" asp-for="Username" />
        <span asp-validation-for="PW"></span><br>
        <label asp-for="PW">
            Введите пароль
        </label><br>
        <input class="form-control size" asp-for="PW" /><br>
        <span asp-validation-for="PW"></span><br>
        <input type="submit" value="Войти" class="btn btn-sm btn btn-outline-dark" />
    </div>
</form>
